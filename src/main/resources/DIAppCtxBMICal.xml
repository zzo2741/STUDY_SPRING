<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
>

	<!-- BMI지수 빈 설정 : setter를 통해 값 설정됨 -->
	<!-- 멤버변수 초기화를 위해 property엘리먼트의 하위 엘리먼트로 value가 사용됨 -->
	<bean id="bmiCalResult" class="di.BMICalResult">
		<property name="lowWeight">
			<value>18.5</value>
		</property>
		<property name="normal">
			<value>23</value>
		</property>
		<property name="overWeight">
			<value>25</value>
		</property>
		<property name="obesity">
			<value>30</value>
		</property>
	</bean>

	<!-- BMI결과 출력을 위한 빈 생성 -->
	<bean id="myInfo" class="di.BMIInfoView">
		<!-- String, double형 멤버변수 초기화 -->
		<property name="name" value="이준승"></property>
		<property name="height" value="177"></property>
		<property name="weight" value="82"></property>
		<!-- ArrayList<>컬렉션 타입의 멤버변수 초기화 -->
		<property name="hobbys">
			<!-- 컬렉션은 배열처럼 여러 항목을 가질 수 있으므로 list엘리먼트를 사용한다. -->
			<list>
				<value>코딩</value>
				<value>잠자기</value>
				<value>먹기</value>
			</list>
		</property>
		<!-- 위에서 미리 생성한 Bean을 참조하여 초기화한다. -->
		<property name="bmiCalResult">
			<ref bean="bmiCalResult"></ref>
		</property>
	</bean>

</beans>
